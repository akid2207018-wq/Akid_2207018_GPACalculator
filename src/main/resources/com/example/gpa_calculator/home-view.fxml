<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.gpa_calculator.HomeController">
    <center>
        <VBox alignment="CENTER" spacing="30.0" style="-fx-background-color: #f0f8ff;">
            <padding>
                <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
            </padding>
            
            <Label text="Welcome to GPA Calculator" textFill="#2c3e50">
                <font>
                    <Font name="System Bold" size="36.0" />
                </font>
            </Label>
            
            <Label alignment="CENTER" text="Calculate your GPA easily and efficiently" textFill="#34495e" wrapText="true">
                <font>
                    <Font size="18.0" />
                </font>
            </Label>
            
            <Label alignment="CENTER" text="Track your academic performance by adding courses,&#10;recording grades, and calculating your overall GPA." textAlignment="CENTER" textFill="#7f8c8d" wrapText="true">
                <font>
                    <Font size="14.0" />
                </font>
                <VBox.margin>
                    <Insets top="10.0" />
                </VBox.margin>
            </Label>
            
            <Button mnemonicParsing="false" onAction="#handleStartCalculator" prefHeight="50.0" prefWidth="250.0" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-background-radius: 10; -fx-cursor: hand;" text="Start GPA Calculator">
                <font>
                    <Font name="System Bold" size="16.0" />
                </font>
                <VBox.margin>
                    <Insets top="20.0" />
                </VBox.margin>
            </Button>
            
            <Label text="Ready to get started? Click the button above!" textFill="#95a5a6">
                <font>
                    <Font size="12.0" />
                </font>
            </Label>
        </VBox>
    </center>
</BorderPane>
